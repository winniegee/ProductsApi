
@{
    ViewBag.Title = "ProductList";
}
<h2>ProductList</h2>
<table id="productTB" class="table table-striped table -bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
</table>
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script src="htTps://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script>$(function () {
            var dataTable = $('#productTB').DataTable({
                //configuration settings for the table
                "ajax": {
                    "url": "/api/product/productlist",
                    "type": "GET",
                    "dataType": "json",
                    "dataSrc": "" //render as array not json
                },
                "columns":
                    [
                        { "data": "Id" },
                        { "data": "Name" },
                        { "data": "Description" },
                        { "data": "Price" },
                        { "data": "Category.Name" },

                    ],

                "language": {
                    "emptyTable": "Table is empty"
                }
            });
        });


        function PopupForm(url) {
            var formDiv = $('<div>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    var Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Add Product',
                        height: 500,
                        width: 300,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }</script>
}
